<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contact Us</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ApartmentSystem.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/responsive.css">
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-lg">

                <a class="navbar-brand" asp-area="" asp-page="/Index">NEZTAR GAZE</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">

                        <li class="nav-item dropdown">
                            <a class="nav-link nav-link-custom dropdown-toggle" href="pages/new.html" id="newDropdown" data-bs-toggle="dropdown">
                                New
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="pages/new.html">Just In</a></li>
                                <li><a class="dropdown-item" href="pages/shop.html">All Products</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link nav-link-custom dropdown-toggle" href="pages/shop.html" data-bs-toggle="dropdown">
                                Shop
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="pages/shop.html">All Products</a></li>
                                <li><a class="dropdown-item" href="pages/hoodies.html">Hoodies</a></li>
                                <li><a class="dropdown-item" href="pages/tees.html">Graphic Tees</a></li>
                                <li><a class="dropdown-item" href="pages/pants.html">Pants</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" href="pages/sale.html">Sale</a>
                        </li>

                    </ul>
                </div>

                <div class="ms-auto d-flex gap-3 align-items-center navbar-icons">
                    <div class="search-bar-custom">
                        <input type="text" id="searchInput" placeholder="Search products..." onkeyup="liveSearch()">
                        <i class="fas fa-search"></i>
                    </div>

                    <button class="icon-btn-custom" onclick="openWishlist()" title="Wishlist">
                        <i class="far fa-heart"></i>
                        <span class="badge bg-danger" id="wishlistCount" style="display:none;">0</span>
                    </button>

                    <button class="icon-btn-custom" id="cartBtn" onclick="toggleCart()" title="Cart">
                        <i class="fas fa-shopping-bag"></i>
                        <span class="cart-badge" id="cartCount">0</span>
                    </button>
                </div>
            </div>
        </nav>
        <section class="hero-section">
            <div class="hero-content">
                <h1>Urban Culture</h1>
                <p>Premium Streetwear for the Bold</p>
                <a href="pages/shop.html" class="btn-hero btn-primary-custom">Shop New</a>
                <a href="pages/new.html" class="btn-hero btn-secondary-custom">Explore</a>
            </div>
        </section>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer - Corrected Version -->
    <footer>
        <div class="container-lg">
            <div class="footer-grid">

                <div class="footer-col">
                    <h5>GET HELP</h5>
                    <ul>
                        <li><a href="#">Order Status</a></li>
                        <li><a href="#">Shipping Info</a></li>
                        <li><a href="#">Returns</a></li>
                        <li><a href="pages/contact-us.html">Contact Us</a></li>
                    </ul>
                </div>

                <div class="footer-col">
                    <h5>ABOUT</h5>
                    <ul>
                        <li><a href="pages/our-story.html">Our Story</a></li>
                        <li><a href="#">News</a></li>
                        <li><a href="#">Careers</a></li>
                    </ul>
                </div>

                <div class="footer-col">
                    <h5>SHOP</h5>
                    <ul>
                        <li><a href="pages/shop.html">All Products</a></li>
                        <li><a href="pages/hoodies.html">Hoodies</a></li>
                        <li><a href="pages/tees.html">Graphic Tees</a></li>
                        <li><a href="pages/sale.html">Sale</a></li>
                    </ul>
                </div>

                <div class="footer-col">
                    <h5>FOLLOW US</h5>
                    <div class="social-icons">
                        <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                        <a href="#" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                    </div>

                    <div class="newsletter-signup">
                        <input type="email" placeholder="Enter your email" id="emailInput">
                        <button onclick="subscribeNewsletter()" class="btn-subscribe">SUBSCRIBE</button>
                    </div>
                </div>

            </div>

            <div class="footer-bottom">
                <div>&copy; 2025 NESTAR GAZE. All Rights Reserved.</div>
                <div class="footer-links">
                    <a href="#">Privacy Policy</a>
                    <a href="#">Terms of Use</a>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>